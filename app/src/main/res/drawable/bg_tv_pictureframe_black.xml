<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#00909090" />  //设置该控件的背景颜色
    //设置边距
    <padding
        android:bottom="0dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp" />

    //控制边界线颜色和笔触大小
    <stroke
        android:width="0.5dp"
        android:color="#909090" />
    //控制界面颜色渐变
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#FFFFFF"
        android:type="linear"
        android:angle="90"/>
    //控制倒角大小
    <corners android:radius="0dp" />
</shape>